{# templates/admin/reservations/edit.html.twig #}
{% extends '@EasyAdmin/crud/edit.html.twig' %}

{% block main %}
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
            <h1 class="text-2xl font-bold mb-6">Modifier le statut de la r√©servation #{{ entity.instance.id }}</h1>
            
            {{ form_start(form) }}
                <div class="mb-6">
                    {{ form_label(form.status) }}
                    <div class="mt-2">
                        {% for choice in form.status.children %}
                            <div class="flex items-center mb-2">
                                {{ form_widget(choice, {
                                    attr: { class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300' }
                                }) }}
                                {{ form_label(choice, null, {
                                    label_attr: { class: 'ml-2 block text-sm text-gray-900' }
                                }) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="flex justify-end space-x-3">
                    <a href="{{ ea_url().setAction('detail').setEntityId(entity.primaryKeyValue) }}" 
                       class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 transition">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                        Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}