{% extends "base.html.twig" %}

{% block body %}
<body class="font-[Funnel Sans]">

    <!--=========================Hero Section====================-->
    <section class="relative bg-[linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url('img/contact_hero.jpg')] bg-center bg-cover h-96 flex items-center justify-center">
        <div class="text-center text-white">
            <h1 class="text-5xl font-semibold">Contactez-nous</h1>
            <p class="mt-4 text-lg">Nous sommes là pour répondre à vos questions.</p>
        </div>
    </section>

    <!--=========================Contact Section====================-->
    <section class="py-16 bg-[var(--second)]">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Formulaire de Contact -->
                <div class="bg-white p-8 rounded-lg shadow-lg">
                    <h2 class="text-2xl font-semibold mb-6">Envoyez-nous un message</h2>
                    {{ form_start(form) }}
                        <div class="space-y-6">
                            {{ form_row(form.name) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.subject) }}
                            {{ form_row(form.message) }}
                            <div>
                                <button type="submit" class="w-full bg-[var(--beige)] text-white py-3 px-4 rounded-md font-semibold hover:bg-black duration-300">
                                    Envoyer le message
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>

                <!-- Informations de Contact et Carte -->
                <div class="space-y-8">
                    <div class="bg-white p-8 rounded-lg shadow-lg">
                        <h2 class="text-2xl font-semibold mb-6">Nos Coordonnées</h2>
                        <ul class="space-y-4 text-gray-700">
                            <li class="flex items-center">
                                <i class="fas fa-map-marker-alt text-[var(--beige)] mr-4"></i>
                                <span>123 Rue de l'Hôtel, Ville, Pays</span>
                            </li>
                            <li class="flex items-center">
                                <i class="fas fa-phone text-[var(--beige)] mr-4"></i>
                                <span>+33 123 456 789</span>
                            </li>
                            <li class="flex items-center">
                                <i class="fas fa-envelope text-[var(--beige)] mr-4"></i>
                                <span>info@hotelroxal.com</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Carte Google Maps -->
                    <div class="bg-white p-8 rounded-lg shadow-lg">
                        <h2 class="text-2xl font-semibold mb-6">Où nous trouver</h2>
                        <div class="overflow-hidden rounded-lg">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.99144060821!2d2.292292615674389!3d48.85837360866186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1633012345678!5m2!1sfr!2sfr" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        {% for message in app.flashes('success') %}
            Swal.fire({
                title: 'Succès!',
                text: '{{ message }}',
                icon: 'success',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK'
            });
        {% endfor %}
    </script>

</body>
{% endblock %}